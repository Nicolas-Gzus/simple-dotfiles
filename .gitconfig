[core]
	autocrlf = input
[alias]
        lg = log --graph --pretty=format:'%Cred%h%Creset - %Cgreen(%ad)%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=local
	s = status -sb
	c = commit
	ch = checkout
	d = diff

	hide = update-index --assume-unchanged
        unhide = update-index --no-assume-unchanged


[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main
[user]
	name = niscolas
	email = nic.cp@hotmail.com
[merge]
    tool = unityyamlmerge

[mergetool "unityyamlmerge"]
    trustExitCode = false
    cmd = /mnt/c/'Program Files'/Unity/Hub/Editor/2020.3.0f1/Editor/Data/Tools/UnityYAMLMerge.exe merge -p "$BASE" "$REMOTE" "$LOCAL" "$MERGED"
